---
import Root from '@/layouts/Root.astro';
import Layout from '@/layouts/Layout.astro';
import Costumes from '@bpCostumes/index.astro';

const title = '【ブルプロ】コーディネート集';
const description = '組み合わせの記憶が怪しくなってきたのでまとめてみる。アホ毛は気分次第で変わる！ゲーム内に欲しいね！';
---

<Root
  title={title}
  description={description}
  ogimage={Astro.url.origin + '/images/blueprotocol/costumes/ogimage.webp'}
>
  <Layout layout="app">
    <Costumes title={title} description={description} />
  </Layout>
</Root>