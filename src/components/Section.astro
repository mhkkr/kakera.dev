---
interface Props {
	title: string;
	description: string;
	url: string;
	thumb: ImageMetadata;
}

const { title, description, url, thumb } = Astro.props;
---

<section class="flex gap-4">
	<div class="order-2">
		<h2 class="font-bold text-2xl">
			<a class="hover:underline" href={url} target="_blank" rel="noopener noreferrer">{title}</a>
		</h2>
		<p class="mt-2">{description}</p>
		<div class="mt-2">
			<slot />
		</div>
	</div>
	<div class="flex-shrink-0">
		<a class="transition-opacity hover:opacity-70" href={url} target="_blank" rel="noopener noreferrer"><img class="w-32 h-32 object-cover" src={thumb.src} alt="" /></a>
	</div>
</section>