---
import Anchor from '@/components/Anchor.astro';

interface Props {
	title: string;
	description: string;
	thumb: ImageMetadata;
	url?: string;
}
const { title, description, thumb, url = '' } = Astro.props;
---

<section class="shadow-lg p-4">
	<div class="flex gap-2 items-center">
		<h3 class="font-bold text-lg break-all">
			<Anchor url={url}>
				<img class="w-[2em] h-[2em] object-contain" src={thumb.src} width={thumb.width} height={thumb.height} alt="" />
				{title}
			</Anchor>
		</h3>
	</div>
	<p class="mt-3 text-sm">{description}</p>
	<div class="empty:hidden mt-3 text-sm"><slot /></div>
</section>