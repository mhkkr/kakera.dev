---
import Costumes from './components/Costumes'
import CostumeDetail from './components/CostumeDetail'
import CostumeImage from './components/CostumeImage'
import Lighting from './components/Lighting'
---

<div class="relative grid grid-cols-1 items-center min-h-svh py-32 px-4">
  <div class="grid grid-cols-3 gap-4 max-w-screen-md w-full mx-auto">
    <div class="col-span-1 flex flex-col">
      <div class="flex-grow">
        <Costumes client:load />
      </div>
      <div class="flex-none">
        <p class="text-xs">©2019 Bandai Namco Online Inc. ©2019 Bandai Namco Studios Inc.</p>
      </div>
    </div>
    <div class="col-span-2 relative">
      <CostumeImage client:load />
      <div class="absolute w-4 left-4 top-4">
        <Lighting client:load />
      </div>
      <div class="absolute w-72 left-[calc(100%_-_5rem)] top-1/2 -translate-y-1/2">
        <CostumeDetail client:load />
      </div>
    </div>
  </div>
</div>